@model Customer;

@{
    ViewBag.pageTitle = "Edit Customer";
}

<form enctype="multipart/form-data" asp-controller="customer" asp-action="edit"
      method="post" class="mt-3">
    <input hidden asp-for="Id"/>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="MobileNo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="MobileNo" class="form-control" placeholder="Mobile Number">
            <span asp-validation-for="MobileNo" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>