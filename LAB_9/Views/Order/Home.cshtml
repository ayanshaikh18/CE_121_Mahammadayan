@model IEnumerable<Order> ;


@{
    ViewBag.pageTitle = "Manage Orders";
}


<h2><b>All Orders' Details</b></h2>
<br />
<a asp-action="Create">New Order</a>
<br />
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Customer ID</th>
            <th>Product ID</th>
            <th>Amount</th>
            <th>Order Date</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CustomerName</td>
                <td>@order.ProductName</td>
                <td>@order.Amount</td>
                <td>@order.OrderDate</td>
                <td>
                    <a asp-controller="Order" asp-action="edit"
                       asp-route-id="@order.Id" class="btn btn-primary m-1">Edit</a>
                </td>
                <td>
                    <a asp-controller="order" asp-action="delete" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>