@model IEnumerable<Product>

@{ 
    ViewBag.pageTitle = "Manage Products";
}

<h2><b>All Prodcuts' Details</b></h2>
<br />
<a asp-action="Create">New Product</a>
<br /><br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Details</th>
            <th>Price</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Details</td>
                <td>@product.Price</td>
                <td>
                    <a asp-controller="Product" asp-action="edit"
                       asp-route-id="@product.Id" class="btn btn-primary m-1">Edit</a>
                </td>
                <td>
                    <a asp-controller="Product" asp-action="delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>