@page

    <div class="container">
        <form asp-controller="home" asp-action="Test2" method="post">
            <div class="form-group">
                <label for="n1">Enter 1 st Number :</label>
                <input type="number" class="form-control" required id="n1" name="n1" value="@ViewBag.n1">
            </div>
            <div class="form-group">
                <label for="n2">Enter 2 nd Number :</label>
                <input type="number" class="form-control" required id="n2" name="n2" value="@ViewBag.n2">
            </div>
            <button type="submit" class="btn btn-primary">Add</button><br /><br />
            <div class="form-group">
                <label>Result : @ViewBag.sum</label>
            </div>
        </form>
    </div>